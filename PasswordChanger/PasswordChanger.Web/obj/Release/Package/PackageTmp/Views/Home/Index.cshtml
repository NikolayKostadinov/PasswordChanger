@model PasswordChanger.Application.Dto.UsersDataDto
@{
    ViewBag.Title = "Change password";
}
<center>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="wrapper">
        <div>
            <div class="heading">
                BMS Service Desk Manager
            </div>
            <div class="form-wrapper">
                <h2 class="login_inputs">@ViewBag.Title</h2>
                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-controll-wrapper clearfix">
                        @Html.LabelFor(m => m.UserName)
                        @Html.EditorFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                    <div class="form-controll-wrapper clearfix">
                        @Html.LabelFor(m => m.CurrentPassword)
                        @Html.EditorFor(m => m.CurrentPassword)
                        @Html.ValidationMessageFor(m => m.CurrentPassword)
                    </div>
                    <div class="form-controll-wrapper clearfix">
                        @Html.LabelFor(m => m.NewPassword)
                        @Html.EditorFor(m => m.NewPassword)
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                    <div class="form-controll-wrapper clearfix">
                        @Html.MathCaptcha("Try another", string.Empty, "Is required field", true)
                        <label for="CaptchaInputText" class="col-xs-4" style="margin-left: -15px; margin-top: -45px;">Enter the result you see above:</label>
                    </div>
                    <div class="controlls-wrapper clearfix">
                        <img src="~/images/bms_logo.png">
                        @Html.ActionLink("Back to SDM","RedirectToLogin",null, new { @class = "btn btn-default" } )
                        @*<a href="http://sdm.bmsys.eu/" class="btn btn-default">Back to SDM</a>*@
                        <button type="submit" class="btn btn-primary">Submit</button>

                    </div>
                }
            </div>
            <footer>Copyright © 2016 BMS. All rights reserved.</footer>
        </div>
    </div>
</center>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('.alert').fadeOut(10000);
    </script>
}